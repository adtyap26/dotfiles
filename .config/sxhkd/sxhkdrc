#################################################################
# SUPER + FUNCTION KEYS
#################################################################

# musikcube
super + F1
	st -e musikcube

# Atom
super + F2
	~/Scripts/editformat.sh

#Standard Note
super + F3
    /usr/bin/standard-notes-3.23.170-linux-x86_64.AppImage

#dmenu_man
super + F4
    sh /usr/bin/dmenu_man.sh

#emoji
super + F5
    rofi -modi emoji -show emoji

#rofi calculator
super + F6
    rofi -show calc -modi calc -no-show-match -no-sort
 
#warp control
super + F7
    ~/Scripts/warpcontrol.sh

  
#passmenu
super + F9
    ~/Scripts/passmenu.sh

#keymaps
super + F10
    ~/Scripts/dmenu_sxhkd.sh

#Rofi Fullscreen
super + F11
    rofi -theme-str 'window \{width: 100%;height: 100%;\}' -show drun

#Rofi
super + r
    rofi -show drun

#Screen record
super + shift + p
    /usr/bin/dm_record

#Screen Record II
super + shift + o
   ~/Scripts/screen-recorder.sh

#Screen Record III
super + shift + i
  ~/Scripts/dmenu_record


#################################################################
# SUPER + ... KEYS
#################################################################

#Browser
super + w
    google-chrome-stable


#logout
super + x
    /usr/bin/dm-logout

#Rofi theme selector
super + alt + r
    rofi-theme-selector

#Pavucontrol
super + v
    pavucontrol


#ST
super + Return
    st

#Xkill
super + Escape
    xkill

