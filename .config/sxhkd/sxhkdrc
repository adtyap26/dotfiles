#################################################################
#     SCREENSHOTS
#################################################################

#Scrot
Print
    scrot -m '%Y-%m-%d-%s_screenshot.png' -e 'mv $f ~/Pictures'; \
    notify-send -i ~/Apps/Tokyo-Night-GTK-Theme/icons/Tokyonight-Dark/actions/symbolic/view-list-images-symbolic.svg "Screenshot is saved!"

SHIFT + ctrl + Print 
    scrot -s '%Y-%m-%d-%s_screenshot.png' -e 'mv $f ~/Pictures'; \
    notify-send -i ~/Apps/Tokyo-Night-GTK-Theme/icons/Tokyonight-Dark/actions/symbolic/view-list-images-symbolic.svg "Screenshot is saved!"

#screeenshooter
ctrl + Print
     xfce4-screenshooter


#################################################################
#     MULTIMEDIA KEYS
#################################################################
#
# # #Raises volume
XF86AudioRaiseVolume
    /usr/local/bin/volume.sh up; \
   ~/Scripts/killdwmblock.sh


# # #Lowers volume
XF86AudioLowerVolume
    /usr/local/bin/volume.sh down; \
   ~/Scripts/killdwmblock.sh
  

  #Mute
XF86AudioMute
    /usr/local/bin/volume.sh mute; \
   ~/Scripts/killdwmblock.sh

#Raises mic Volume
super + ctrl + alt + o
    amixer set Capture 10%+; \
   ~/Scripts/killdwmblock.sh
    

super + ctrl + alt + p
    amixer set Capture 10%-; \
   ~/Scripts/killdwmblock.sh

#Playerctl works for Pragha, Spotify and others
#Delete the line for playerctl if you want to use mpc
#and replace it with the corresponding code
#mpc works for e.g.ncmpcpp
#mpc toggle
#mpc next
#mpc prev
#mpc stop

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

#Brightness up
#XF86MonBrightnessUp
#    xbacklight -inc 10

#Brightness down
#XF86MonBrightnessDown
#    xbacklight -dec 10

